<% provide(:title, 'ログイン画面') %>

<div class="row">
  <div class="content">
    <div class="offset-sm-2 col-sm-8 offset-sm-2">
      <p class="title">ログイン</p>
      <div class="form-group">
        <%= form_with url: user_sessions_path do |f|  %>
          <div class="row">
            <div class="offset-4 col-4　offset-4">
              <%= f.email_field :email, class: "form-control mt-4", placeholder: "メールアドレス" %>
            </div>
          </div>
          <div class="row">
            <div class="offset-4 col-4　offset-4">
            <%= f.password_field :password, class: "form-control mt-4", placeholder: "パスワード" %>
            </div>
          </div>
          <%= f.submit "ログイン", class: "btn btn-success mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
