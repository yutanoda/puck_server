<% provide(:title, 'ログイン画面') %>
<%= stylesheet_link_tag 'user_sessions', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_pack_tag 'user_sessions', 'data-turbolinks-track': 'reload' %>
<div class="container">
  <p class="login-title">ログイン</p>
  <div class="form-group">
    <%= form_with url: user_sessions_path, local: true do |f|  %>
      <div class="row">
        <div class="offset-lg-4 col-lg-4 offset-lg-4">
          <%= f.text_field :login_id, class: "form-control", placeholder: "ログインID", id: "form-id" %>
        </div>
      </div>
      <div class="row">
        <div class="offset-lg-4 col-lg-4 offset-lg-4">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード", id: "form-password" %>
        </div>
      </div>
      <%= f.submit "ログイン", class: "btn btn-success", id: "btn-login" %>
    <% end %>
  </div>
</div>


  
